fibo-der-rat-iro:settlementDateOffset
	a owl:ObjectProperty ;
	rdfs:label "settlement date offset"@en ;
	rdfs:comment "QName: NONE:settlementDateOffset" ;
	rdfs:domain fibo-der-rat-iro:OptionStripContract ;
